import gnu.io.*;
import java.io.*;

public class SerialPortReader implements SerialPortEventListener
{
    private InputStreamReader entree;       //EntrÃ©e standard
    private byte[] buffer = new byte[1024];
    
    /**
    *Constructeur d'objets de la classeSerialPortReader.
    *
    **/
    public SerialPortReader()
    {
        
    }
    
    public InputStreamReader getEntree()
    {
        return this.entree;
    }
    
    public void setEntree(InputStreamReader entre)
    {
        this.entree = entre;
    }
    
    /**
    *Methode de lecture.
    **/
    public void read()
    {
      try
      {
        for(int i = 0; data = input.read()) > -1 && i < buffer.length;i++) {
				if (donnee == '\n') {
					break;
				}
				buffer[i] = (byte) donnee;
      }
      catch(IOException e)
      {
        System.err.println(e.getMessage());
      }
      catch(Exception e)
      {
        System.err.println(e.getMessage());
      }
    }
}
