import java.io.*;

public class SerialPortWriter 
{
	OutputStream hors;	// Sortie standard
	
	/**
	 * Constructeur d'objets de type SerialPortWriter
	 * @param output
	 */
	public SerialPortWriter(OutputStream output)
	{
		hors = output;
		
	}
	
	public void run() {
		try 
		{
			int out = 0;
			while ((out = System.in.read()) > -1) {
				this.hors.write(out);
			}
		} catch (IOException e) {
			e.getMessage();
		}
		catch(Exception e)
		{
			e.getMessage();
			
		}
	}
}
